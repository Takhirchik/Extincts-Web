<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="create-table-stands" author="takhirchik">
        <createTable tableName="stands">
            <column autoIncrement="true" name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="stand_name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="text"/>
            <column name="stand_category_id" type="bigint">
                <constraints foreignKeyName="stand_stand_category_id_stand_categories_id" references="stand_categories(id)"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
