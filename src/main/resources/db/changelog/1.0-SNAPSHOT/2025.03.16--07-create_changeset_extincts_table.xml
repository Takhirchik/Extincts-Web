<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="create-table-extincts" author="takhirchik">
        <createTable tableName="extincts">
            <column autoIncrement="true" name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="extinct_name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="text"/>
            <column name="stand_id" type="bigint">
                <constraints foreignKeyName="extinct_stand_id_stands_id" references="stands(id)"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
