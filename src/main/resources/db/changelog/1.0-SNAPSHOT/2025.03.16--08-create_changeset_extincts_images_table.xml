<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="create-table-extincts-images" author="takhirchik">
        <createTable tableName="extincts-images">
            <column autoIncrement="true" name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="url_image" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="extinct_id" type="bigint">
                <constraints foreignKeyName="extinct_image_extinct_id_extincts_id" references="extincts(id)"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
